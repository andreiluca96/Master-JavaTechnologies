<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee" version="2.0">
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{Index.goToCoursesPage}</from-action>
            <from-outcome>courses</from-outcome>
            <to-view-id>/courses.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{Index.goToOptionalCoursesPackagePage}</from-action>
            <from-outcome>optional_courses_packages</from-outcome>
            <to-view-id>/optional_courses_packages.xhtml.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{Index.goToCoursesInsertionPage}</from-action>
            <from-outcome>insert_courses</from-outcome>
            <to-view-id>/insert_courses.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{Index.goToOptionalCoursesPackagePage}</from-action>
            <from-outcome>insert_optional_courses_packages</from-outcome>
            <to-view-id>/insert_optional_courses_packages.xhtml.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>